.form .btn{
    border-radius: 15px;
    background-color: #5bd6df;
    box-shadow: 0px 2px 0px 0px #17767d;
}
/* change input style */
.form .user-input {
    width: 100%;
    border-radius: 15px;
}



.form .options-02{
  color: #bbb;
  font-size: 14px;
  margin-top: 30px;
}

.form .options-02 a{
