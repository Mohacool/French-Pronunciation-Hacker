<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    

    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
</head>
<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        text-decoration: none;
        overflow-x:hidden;
    }
    body{
        background-color:#15b9c1;
        /* background-color:#2A9D8F;
        background-color:#7DCFB6; */
    }
    .title{
        font-family: 'Roboto', sans-serif;
        font-weight:800;
        padding-top:25px;
        text-align: center;
        
    }
    .sub{
        font-size:17px;
        color:white;
        font-weight:400;
        font-style:italic;
    }
    .description{
        font-family: 'Roboto', sans-serif;
        font-weight:800;
        font-size:23px;
        color:white;
        text-align:center;

        padding-top:50%;
    }
    .main{
        font-size:26px;
    }
    .container{
        /* padding-top:50%; */
        
    }
    .duo_button.green {
        background-color:#60dc5e !important;
        /* background-color:#E9C46A !important;
        background-color:#2EB270 !important; */
    }
    .duo_button.green::after{
        background-color:#31902f !important;
        /* background-color:#b88c1d !important;
        background-color:#0a6638 !important; */
    }
    .duo_button.blue{
        background-color:#7EDDD2 !important;
        background-color:#ECE4B7 !important;
    }
    
    .duo_button.blue::after{
        background-color:#69685d !important;
    }
    .duo_button.big{
        height:65px;
        background-color:#e99434 !important;
    }
    .duo_button.big::after{
        height:65px;
        background-color:#b36627 !important;
    }
    /* button */
    .duo_button{
        width: 300px;
        
        background-color: #8cdce2;
        text-align: center;
        padding: 4px;
        border-radius: 9px;
        font-family: 'Raleway', sans-serif;
        color: white;
        /* font-weight: 800; */
        position: relative;
        height: 40px;
        display:flex;
        align-items:center;
        justify-content: center;

        -webkit-tap-highlight-color: transparent;

        font-family: 'Roboto', sans-serif;
        font-weight:800;
        color:black;
        cursor:pointer;

        border-radius: 13px;
    }
    .duo_button::after{
        content: "";
        width: 298px;
        border-radius: 10px;
        position: absolute;
        top: 0;
        left: 0;
        background-color: #156d74;

        padding: 1px;
        z-index: -1;
        height: 40px;

        border-radius: 14px;
    }
    .duo_button:active{
        bottom:-4px;
    }
    .duo_button:active::after{
        height:38px;
    }
    .buttons{
        
        display:flex;
        align-items:center;
        justify-content: center;
    }
    .get_started, .signin{
        font-size:17px;
        
    }
    .signin{
        
    }
    .pt-2{
        padding-top:2em;
    }
    .pt-3{
        padding-top:3em;
    }
    .pt-1{
        padding-top:1em;
    }
    .content {
        border: 1px solid pink;
        height:100vh;
        top:0;
        overflow:hidden;
        position: relative;
    }
    .content_inner{
        border: 1px solid pink;
        
        top:0;
        overflow:hidden;
        position: relative;
    }
    .first, .second {
        
    }
    .first {
        
        -webkit-transition: transform 1s ease;
    }
    .first_inner, .third_inner{
        -webkit-transition: transform 1s ease;
    }
    .second_inner{
        text-align:center;
        transform: translate3d(100%, 0, 0);
        -webkit-transform: translate3d(100%, 0, 0);
        -webkit-transition: transform 1s ease;

        position: absolute;
        top:0;
    }
    .third_inner{
        text-align:center;
        transform: translate3d(200%, 0, 0);
        -webkit-transform: translate3d(200%, 0, 0);
        -webkit-transition: transform 1s ease;

        position: absolute;
        top:0;
    }
    .first_inner.animate{
        transform: translate3d(-100%, 0, 0);
        -webkit-transform: translate3d(-100%, 0, 0);
        -webkit-transition: transform 1s ease;
    }
    .second_inner.animate{
        transform: translate3d(0, 0, 0);
        -webkit-transform: translate3d(0, 0, 0);
        -webkit-transition: transform 1s ease;
    }
    .third_inner.animate{
        transform: translate3d(-200%, 0, 0);
        -webkit-transform: translate3d(-200%, 0, 0);
        -webkit-transition: transform 1s ease;
    }
    .first.animate {
        transform: translate3d(-100%, 0, 0);
        -webkit-transform: translate3d(-100%, 0, 0);
        -webkit-transition: transform 1s ease;
    }
    .second {
        /* height:1000px; */
        /* background: green; */
        text-align:center;
        transform: translate3d(100%, 0, 0);
        -webkit-transform: translate3d(100%, 0, 0);
        -webkit-transition: transform 1s ease;

        position: absolute;
        top:20vh;
    }
    
    .second.animate {
        transform: translate3d(0, 0, 0);
        -webkit-transform: translate3d(0, 0, 0);
        -webkit-transition: transform 1s ease;
    }
    
    .number{
        font-family: 'Roboto', sans-serif;
        font-weight:800;
        color:black;
        font-size:50px;
    }
    .how_text{
        font-family: 'Roboto', sans-serif;
        font-weight:800;
        color:white;
        font-size:30px;
        
        padding-left: 30px;
        padding-right: 30px;
    }
    .slider_boxes{
        /* border:1px solid red; */
        width:100%;
        height:50px;
        display:flex;
        justify-content: center;
        align-items:center;
    }
    .slider{
        height:8px;
        width:50px;
        background-color:#156d74;
        border-radius:2px;
        margin-right:10px;
        margin-left:10px;
        opacity:0.4;
    }
</style>
<body>
    
    <div class="container">
        
        

        <div class="content">
            
            <div class="title">
                <h1 class="main">French Pronunciation Hacker</h1>
                <h1 class="sub">Pratique et améliore ta prononciation.</h1>
            </div>
            <div class="first">
                
                <div class="description">
                    Progresse en français avec des
                        histoires captivantes!     
                </div>
                <div class="buttons get_started pt-2">
                    <div class="duo_button green">
                        GET STARTED
                    </div>
                </div>
                <div class="buttons signin pt-1">
                    <div class="duo_button blue">
                        SIGN IN
                    </div>
                </div>
                <div class="buttons signin pt-3">
                    <div class="duo_button big">
                        Comment apprendre 
                        le français rapidement ?
                    </div>
                </div>
            </div>

            <div class="second">
                <div class="content_inner">
                    <div class="first_inner">
                        <h1 class="number">1</h1>
                        <p class="how_text">Une question de temps. C’est différent si tu étudies 1h, 10h ou 100h. Ce n’est pas une question de quantité de mois ou d’années, mais c'est une question de quantité d’heures. </p>
                    </div>
                    <div class="second_inner">
                        <h1 class="number">2</h1>
                        <p class="how_text">Une question de temps. C’est différent si tu étudies 1h, 10h ou 100h. Ce n’est pas une question de quantité de mois ou d’années, mais c'est une question de quantité d’heures. </p>
                    </div>
                    <div class="third_inner">
                        <h1 class="number">3</h1>
                        <p class="how_text">Une question de temps. C’est différent si tu étudies 1h, 10h ou 100h. Ce n’est pas une question de quantité de mois ou d’années, mais c'est une question de quantité d’heures. </p>
                    </div>
                </div>
                
                
                <div class="slider_boxes">
                    <div class="slider slider1"></div>
                    <div class="slider slider2"></div>
                    <div class="slider slider3"></div>
                </div>
                <div class="back">back</div>
                <div class="next">next</div>

                <div class="firsty">first</div>
                <div class="secondy">second</div>
                <div class="thirdy">third</div>
            </div>
            
        </div>
        
        
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {

            
            // $('.content').on('click', '.first', function (ev) {
            //     $(this).toggleClass('animate');
            //     $('.second').toggleClass('animate');
            // }).on('click', '.second', function (ev) {
            //     $(this).toggleClass('animate');
            //     $('.first').toggleClass('animate');
            // });
            $('.duo_button.big').on('click', function (ev) {
                $('.first').toggleClass('animate');
                $('.second').toggleClass('animate');
                $('.slider1').css('opacity',1);
            }).on('click', '.second', function (ev) {
                $(this).toggleClass('animate');
                $('.first').toggleClass('animate');
            });
            $('.back').on('click',function(){
                $('.second').toggleClass('animate');
                $('.first').toggleClass('animate');
            })
            $('.next').on('click',function(){
                $('.first_inner').toggleClass('animate');
                $('.second_inner').toggleClass('animate');
                
            })
            function first(){
                $('.first_inner').css('-webkit-transform','translate3d(0, 0, 0)');
                $('.first_inner').css('-ms-transform','translate3d(0, 0, 0)');
                $('.first_inner').css('-moz-transform','translate3d(0, 0, 0)');
                $('.first_inner').css('transform','translate3d(0, 0, 0)');
      
                $('.second_inner').css('-webkit-transform','translate3d(100%, 0, 0)');
                $('.second_inner').css('-ms-transform','translate3d(100%, 0, 0)');
                $('.second_inner').css('-moz-transform','translate3d(100%, 0, 0)');
                $('.second_inner').css('transform','translate3d(100%, 0, 0)');

                $('.third_inner').css('-webkit-transform','translate3d(200%, 0, 0)');
                $('.third_inner').css('-ms-transform','translate3d(200%, 0, 0)');
                $('.third_inner').css('-moz-transform','translate3d(200%, 0, 0)');
                $('.third_inner').css('transform','translate3d(200%, 0, 0)');

                // reset sliders and mark the current
                $('.slider').css('opacity',0.4);
                $('.slider1').css('opacity',1);
            }
            function second(){
                $('.first_inner').css('-webkit-transform','translate3d(-100%, 0, 0)');
                $('.first_inner').css('-ms-transform','translate3d(-100%, 0, 0)');
                $('.first_inner').css('-moz-transform','translate3d(-100%, 0, 0)');
                $('.first_inner').css('transform','translate3d(-100%, 0, 0)');
      
                $('.second_inner').css('-webkit-transform','translate3d(0, 0, 0)');
                $('.second_inner').css('-ms-transform','translate3d(0, 0, 0)');
                $('.second_inner').css('-moz-transform','translate3d(0, 0, 0)');
                $('.second_inner').css('transform','translate3d(0, 0, 0)');

                $('.third_inner').css('-webkit-transform','translate3d(100%, 0, 0)');
                $('.third_inner').css('-ms-transform','translate3d(100%, 0, 0)');
                $('.third_inner').css('-moz-transform','translate3d(100%, 0, 0)');
                $('.third_inner').css('transform','translate3d(100%, 0, 0)');

                // reset sliders and mark the current
                $('.slider').css('opacity',0.4);
                $('.slider2').css('opacity',1);
            }
            function third(){
                $('.first_inner').css('-webkit-transform','translate3d(-200%, 0, 0)');
                $('.first_inner').css('-ms-transform','translate3d(-200%, 0, 0)');
                $('.first_inner').css('-moz-transform','translate3d(-200%, 0, 0)');
                $('.first_inner').css('transform','translate3d(-200%, 0, 0)');
      
                $('.second_inner').css('-webkit-transform','translate3d(-100%, 0, 0)');
                $('.second_inner').css('-ms-transform','translate3d(-100%, 0, 0)');
                $('.second_inner').css('-moz-transform','translate3d(-100%, 0, 0)');
                $('.second_inner').css('transform','translate3d(-100%, 0, 0)');

                $('.third_inner').css('-webkit-transform','translate3d(0, 0, 0)');
                $('.third_inner').css('-ms-transform','translate3d(0, 0, 0)');
                $('.third_inner').css('-moz-transform','translate3d(0, 0, 0)');
                $('.third_inner').css('transform','translate3d(0, 0, 0)');

                // reset sliders and mark the current
                $('.slider').css('opacity',0.4);
                $('.slider3').css('opacity',1);
            }
            
            $('.firsty').on('click',function(){
               first();
            })
            $('.secondy').on('click',function(){
                second();
            })
            $('.thirdy').on('click',function(){
                third();
            })
        });
    </script>
</body>
</html>