<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    

    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
</head>
<style>
    *{
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        text-decoration: none;
   
    }
    body{
        background-color:#15b9c1;
        /* background-color:#2A9D8F;
        background-color:#7DCFB6; */
    }
    .title{
        font-family: 'Roboto', sans-serif;
        font-weight:800;
        padding-top:25px;
        text-align: center;
        
    }
    .sub{
        font-size:17px;
        color:white;
        font-weight:400;
        font-style:italic;
    }
    .description{
        font-family: 'Roboto', sans-serif;
        font-weight:800;
        font-size:23px;
        color:white;
        text-align:center;

        /* padding-top:50%; */
        padding-top:20vh;
    }
    .main{
        font-size:26px;
    }
    .container{
        /* padding-top:50%; */
        height:100vh;
        
    }
    
    
    
    /* buttons */
    
    .new_duo{
        
        text-align:center;
        padding:10px;
        align-items:center;
        border-radius:13px;
        color:white;
        text-decoration:none;
        font-family: 'Roboto', sans-serif;
        position:relative;
        cursor:pointer;
        -webkit-tap-highlight-color: transparent;

        font-family: 'Roboto', sans-serif;
        font-weight:800;

        color:black;
        background-color:green;

        width:300px;
        height:40px;
    }
    .new_duo::after{
        content: "";
        width:300px;
        height:43px;
        border-radius:13px;
        position:absolute;
        top:0;
        left:0;
        background-color:rgb(5, 75, 5);
        z-index:-1;
    }
    .new_duo:active{
        bottom:-3px;
    }
    .new_duo:active::after{
        height:40px;
    }

    /* ~~~~~~~~~~~~~~~ button colors ~~~~~~~~~~~~~ */
    .new_duo.green {
        background-color:#60dc5e !important;
        /* background-color:#E9C46A !important;
        background-color:#2EB270 !important; */
    }
    .new_duo.green::after{
        background-color:#31902f !important;
        /* background-color:#b88c1d !important;
        background-color:#0a6638 !important; */
    }
    .new_duo.blue{
        background-color:#7EDDD2 !important;
        background-color:#ECE4B7 !important;
    }
    .new_duo.big{
        height:65px;
        background-color:#e99434 !important;
    }
    .new_duo.big::after{
        height:68px;
        background-color:#b36627 !important;
    }
    .new_duo.big:active::after{
        height:65px;
    }
    
    .new_duo.blue::after{
        background-color:#69685d !important;
    }
    
    .buttons{
        display:flex;
        align-items:center;
        justify-content: center;
    }
    .get_started, .signin{
        font-size:17px;
        
    }
    .signin{
        
    }
    .pt-2{
        padding-top:2em;
    }
    .pt-3{
        padding-top:3em;
    }
    .pt-1{
        padding-top:1em;
    }
    .content {
        /* border: 1px solid pink; */
        height:100vh;
        top:0;
        overflow:hidden;
        position: relative;
    }
    .content_inner{
        /* border: 1px solid pink; */
        height: 100%;
        top:0;
        overflow:hidden;
        position: relative;
    }
    .first, .second {
        
    }
    .first {
        
        -webkit-transition: transform 1s ease;
    }
    .first_inner, .third_inner{
        -webkit-transition: transform 1s ease;
    }
    .second_inner{
        text-align:center;
        transform: translate3d(100%, 0, 0);
        -webkit-transform: translate3d(100%, 0, 0);
        -webkit-transition: transform 1s ease;

        position: absolute;
        top:0;
    }
    .third_inner{
        text-align:center;
        transform: translate3d(200%, 0, 0);
        -webkit-transform: translate3d(200%, 0, 0);
        -webkit-transition: transform 1s ease;

        position: absolute;
        top:0;
    }
    .first_inner.animate{
        transform: translate3d(-100%, 0, 0);
        -webkit-transform: translate3d(-100%, 0, 0);
        -webkit-transition: transform 1s ease;
    }
    .second_inner.animate{
        transform: translate3d(0, 0, 0);
        -webkit-transform: translate3d(0, 0, 0);
        -webkit-transition: transform 1s ease;
    }
    .third_inner.animate{
        transform: translate3d(-200%, 0, 0);
        -webkit-transform: translate3d(-200%, 0, 0);
        -webkit-transition: transform 1s ease;
    }
    .first.animate {
        transform: translate3d(-100%, 0, 0);
        -webkit-transform: translate3d(-100%, 0, 0);
        -webkit-transition: transform 1s ease;
    }
    .second {
        /* height:1000px; */
        /* background: green; */
        text-align:center;
        transform: translate3d(100%, 0, 0);
        -webkit-transform: translate3d(100%, 0, 0);
        -webkit-transition: transform 1s ease;

        position: absolute;
        top:20vh;
        height: 76vh;
    }
    
    .second.animate {
        transform: translate3d(0, 0, 0);
        -webkit-transform: translate3d(0, 0, 0);
        -webkit-transition: transform 1s ease;
    }
    
    .number{
        font-family: 'Roboto', sans-serif;
        font-weight:800;
        color:black;
        font-size:50px;
    }
    .how_text,.how_textEN{
        font-family: 'Roboto', sans-serif;
        font-weight:800;
        color:white;
        font-size:30px;
        
        padding-left: 30px;
        padding-right: 30px;
    }
    .how_textEN{
        display:none;
    }
    
    .how_text.smaller, .how_textEN.smaller{
        font-size:25.5px;
    }
    .slider_boxes{
        /* border:1px solid red; */
        width:100%;
        height:50px;
        display:flex;
        justify-content: center;
        align-items:center;
    }
    .slider{
        height:8px;
        width:50px;
        background-color:#156d74;
        border-radius:2px;
        margin-right:10px;
        margin-left:10px;
        opacity:0.4;
        cursor:pointer;
    }
    .bottom_buttons{
        left: 0;
        right: 0;
        margin: auto;
        position:absolute;
        bottom:10px;
    }

    
</style>
<body>
    
    <div class="container">
        
        

        <div class="content">
            
            <div class="title">
                <h1 class="main">French Pronunciation Hacker</h1>
                <h1 class="sub">Pratique et améliore ta prononciation.</h1>
            </div>
            <div class="first">
                
                <div class="description">
                    Progresse en français avec des
                        histoires captivantes!     
                </div>
                <div class="buttons get_started pt-2">
                    <div class="new_duo green">
                        GET STARTED
                    </div>
                </div>
                <div class="buttons signin pt-1">
                    <div class="new_duo blue">
                        SIGN IN
                    </div>
                </div>
                <div class="buttons signin pt-3">
                    <div class="new_duo big">
                        Comment apprendre 
                        le français rapidement ?
                    </div>
                </div>
            </div>

            <div class="second">
                <div class="content_inner">
                    <div class="first_inner">
                        <h1 class="number">1</h1>
                        <p class="how_text">Une question de temps. C’est différent si tu étudies 1h, 10h ou 100h. Ce n’est pas une question de quantité de mois ou d’années, mais c'est une question de quantité d’heures </p>
                        <p class="how_textEN">A question of time. It's different if you study 1hrs, 10hrs or 100hrs. It's not a question of how many years or months, but how many hours </p>
                    </div>
                    <div class="second_inner">
                        <h1 class="number">2</h1>
                        <p class="how_text smaller">C’est une question de concentration. L’intensité de ta concentration pendant ta pratique de français est fondamentale. Si ta concentration est mauvaise, par exemple 30%, alors ton progrès sera seulement de 30% </p>
                        <p class="how_textEN smaller">It's a question of concentration. The intensity of your concentration during your french practice is fundamental. If your concentration is low, for example 30%, your progress will only be 30% </p>
                    </div>
                    <div class="third_inner">
                        <h1 class="number">3</h1>
                        <p class="how_text smaller">Il est nécessaire de trouver des activités et ressources adaptées à ton niveau pour étudier le français. Un peu de difficulté, ça va. Mais si c’est trop difficile, l’étudiant ne va rien comprendre, et sa concentration ne va pas être bonne </p>
                        <p class="how_textEN smaller">It is necessary to find activities and resources that are adapted to your level for studying french. A little difficulty is good. But if its too difficult the student will understanding nothing and their concentration won't be good </p>
                    </div>
                </div>
                
                
                
                <div class="bottom_buttons">
                    <div class="slider_boxes">
                        <div class="slider slider1"></div>
                        <div class="slider slider2"></div>
                        <div class="slider slider3"></div>
                    </div>
                    <div class="back">back</div>
                    <div class="translate">TRANSLATE</div>
                </div>
                
                

               
            </div>
            
        </div>
        
        
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {

            var EN = false;
            // $('.content').on('click', '.first', function (ev) {
            //     $(this).toggleClass('animate');
            //     $('.second').toggleClass('animate');
            // }).on('click', '.second', function (ev) {
            //     $(this).toggleClass('animate');
            //     $('.first').toggleClass('animate');
            // });
            $('.new_duo.big').on('click', function (ev) {
                $('.first').toggleClass('animate');
                $('.second').toggleClass('animate');
                if ($('.slider2').css('opacity')=="0.4" && $('.slider3').css('opacity')=="0.4"){
                    $('.slider1').css('opacity',1);
                }
                
            }).on('click', '.second', function (ev) {
                $(this).toggleClass('animate');
                $('.first').toggleClass('animate');
            });
            $('.back').on('click',function(){
                $('.second').toggleClass('animate');
                $('.first').toggleClass('animate');
            })
            $('.next').on('click',function(){
                $('.first_inner').toggleClass('animate');
                $('.second_inner').toggleClass('animate');
                
            })

            //Functions for motion
            function first(){
                $('.first_inner').css('-webkit-transform','translate3d(0, 0, 0)');
                $('.first_inner').css('-ms-transform','translate3d(0, 0, 0)');
                $('.first_inner').css('-moz-transform','translate3d(0, 0, 0)');
                $('.first_inner').css('transform','translate3d(0, 0, 0)');
      
                $('.second_inner').css('-webkit-transform','translate3d(100%, 0, 0)');
                $('.second_inner').css('-ms-transform','translate3d(100%, 0, 0)');
                $('.second_inner').css('-moz-transform','translate3d(100%, 0, 0)');
                $('.second_inner').css('transform','translate3d(100%, 0, 0)');

                $('.third_inner').css('-webkit-transform','translate3d(200%, 0, 0)');
                $('.third_inner').css('-ms-transform','translate3d(200%, 0, 0)');
                $('.third_inner').css('-moz-transform','translate3d(200%, 0, 0)');
                $('.third_inner').css('transform','translate3d(200%, 0, 0)');

                // reset sliders and mark the current
                $('.slider').css('opacity',0.4);
                $('.slider1').css('opacity',1);
            }
            function second(){
                $('.first_inner').css('-webkit-transform','translate3d(-100%, 0, 0)');
                $('.first_inner').css('-ms-transform','translate3d(-100%, 0, 0)');
                $('.first_inner').css('-moz-transform','translate3d(-100%, 0, 0)');
                $('.first_inner').css('transform','translate3d(-100%, 0, 0)');
      
                $('.second_inner').css('-webkit-transform','translate3d(0, 0, 0)');
                $('.second_inner').css('-ms-transform','translate3d(0, 0, 0)');
                $('.second_inner').css('-moz-transform','translate3d(0, 0, 0)');
                $('.second_inner').css('transform','translate3d(0, 0, 0)');

                $('.third_inner').css('-webkit-transform','translate3d(100%, 0, 0)');
                $('.third_inner').css('-ms-transform','translate3d(100%, 0, 0)');
                $('.third_inner').css('-moz-transform','translate3d(100%, 0, 0)');
                $('.third_inner').css('transform','translate3d(100%, 0, 0)');

                // reset sliders and mark the current
                $('.slider').css('opacity',0.4);
                $('.slider2').css('opacity',1);
            }
            function third(){
                $('.first_inner').css('-webkit-transform','translate3d(-200%, 0, 0)');
                $('.first_inner').css('-ms-transform','translate3d(-200%, 0, 0)');
                $('.first_inner').css('-moz-transform','translate3d(-200%, 0, 0)');
                $('.first_inner').css('transform','translate3d(-200%, 0, 0)');
      
                $('.second_inner').css('-webkit-transform','translate3d(-100%, 0, 0)');
                $('.second_inner').css('-ms-transform','translate3d(-100%, 0, 0)');
                $('.second_inner').css('-moz-transform','translate3d(-100%, 0, 0)');
                $('.second_inner').css('transform','translate3d(-100%, 0, 0)');

                $('.third_inner').css('-webkit-transform','translate3d(0, 0, 0)');
                $('.third_inner').css('-ms-transform','translate3d(0, 0, 0)');
                $('.third_inner').css('-moz-transform','translate3d(0, 0, 0)');
                $('.third_inner').css('transform','translate3d(0, 0, 0)');

                // reset sliders and mark the current
                $('.slider').css('opacity',0.4);
                $('.slider3').css('opacity',1);
            }
            
            $('.slider1').on('click',function(){
                first();
            })
            $('.slider2').on('click',function(){
                second();
            })
            $('.slider3').on('click',function(){
                third();
            })
            $('.translate').on('click',function(){
                if (EN==false){
                    $('.how_text').css('display','none');
                    $('.how_textEN').css('display','block');
                    EN = true;
                }
                else{
                    $('.how_text').css('display','block');
                    $('.how_textEN').css('display','none');
                    EN = false;
                }
               

            })
        });
    </script>
</body>
</html>